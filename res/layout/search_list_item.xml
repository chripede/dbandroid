<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="wrap_content" android:layout_width="fill_parent" android:padding="4px" android:background="#ffffff">
<ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon" android:id="@+id/itemImage"></ImageView>


<LinearLayout android:id="@+id/LinearLayout01" android:layout_width="fill_parent" android:orientation="vertical" android:layout_marginLeft="5px" android:layout_gravity="top" android:layout_height="fill_parent"><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Item title" android:id="@+id/itemDescription" android:maxLines="2" android:textSize="14sp"></TextView>
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="item description ..." android:id="@+id/itemPrice" android:textStyle="bold" android:textSize="14sp"></TextView>
</LinearLayout>
</LinearLayout>
